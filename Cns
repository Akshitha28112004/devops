Week 1a: Caesar Cipher
def caesar_encrypt(text, shift): result = ""
for char in text:
if char.isupper():
result += chr((ord(char) + shift - 65) % 26 + 65) elif char.islower():
result += chr((ord(char) + shift - 97) % 26 + 97) else:
result += char return result
def caesar_decrypt(cipher, shift):
return caesar_encrypt(cipher, -shift)
if  name  == " main ":
text = input("Enter a message: ")
shift = int(input("Enter a shift value (1-25): ")) encrypted = caesar_encrypt(text, shift)
decrypted = caesar_decrypt(encrypted, shift) print("Encrypted:", encrypted) print("Decrypted:", decrypted)


Week 1b: Playfair Cipher
def playfair_prepare(text: str, for_enc=True):
t = text.upper().replace('J', 'I').replace(' ', '') pairs = []
i = 0
while i < len(t):
a = t[i]
b = t[i+1] if i+1 < len(t) else 'X' if for_enc and a == b:
pairs.append((a, 'X')) i += 1
else:
pairs.append((a, b)) i += 2
return pairs
def playfair_matrix(key: str):
key = key.upper().replace('J', 'I') m = []
for c in key:
if c.isalpha() and c not in m: m.append(c)
for c in "ABCDEFGHIKLMNOPQRSTUVWXYZ":
if c not in m: m.append(c)
return [m[i:i+5] for i in range(0, 25, 5)]
def pos(m, ch):
for i in range(5):
for j in range(5):
if m[i][j] == ch: return i, j
def encrypt_pair(pair, m): a, b = pair
r1, c1 = pos(m, a); r2, c2 = pos(m, b) if r1 == r2:
return m[r1][(c1+1)%5] + m[r2][(c2+1)%5] if c1 == c2:
return m[(r1+1)%5][c1] + m[(r2+1)%5][c2] return m[r1][c2] + m[r2][c1]
def decrypt_pair(pair, m): a, b = pair
r1, c1 = pos(m, a); r2, c2 = pos(m, b) if r1 == r2:
return m[r1][(c1-1)%5] + m[r2][(c2-1)%5] if c1 == c2:
 
return m[(r1-1)%5][c1] + m[(r2-1)%5][c2] return m[r1][c2] + m[r2][c1]
def playfair_encrypt(text, key): m = playfair_matrix(key)
pairs = playfair_prepare(text, True)
return ''.join(encrypt_pair(p, m) for p in pairs)
def playfair_decrypt(cipher, key): m = playfair_matrix(key)
pairs = playfair_prepare(cipher, False)
return ''.join(decrypt_pair(p, m) for p in pairs)
if  name  == " main ":
text = input("Enter text: ") key = input("Enter key: ")
c = playfair_encrypt(text, key) print("Encrypted:", c)
print("Decrypted:", playfair_decrypt(c, key))


Week 3: DES
from Crypto.Cipher import DES
def pad(data: bytes, block_size=8) -> bytes:
return data + b' ' * ((block_size - len(data) % block_size) % block_size)
if  name  == " main ":
key = input("Enter 8-byte key: ").encode()[:8].ljust(8, b' ') text = input("Enter text to encrypt: ").encode()
des = DES.new(key, DES.MODE_ECB) encrypted = des.encrypt(pad(text, 8))
decrypted = des.decrypt(encrypted).rstrip(b' ')
print("Encrypted:", encrypted) print("Decrypted:", decrypted.decode())


