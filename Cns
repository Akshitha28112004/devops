Week 5: AES (CBC)
from Crypto.Cipher import AES
from Crypto.Random import get_random_bytes
def pad(data: bytes, block_size=16) -> bytes:
return data + b' ' * ((block_size - len(data) % block_size) % block_size)
if  name  == " main ":
key = input("Enter 16-byte key: ").encode()[:16].ljust(16, b' ') text = input("Enter text to encrypt: ").encode()
iv = get_random_bytes(16)
cipher = AES.new(key, AES.MODE_CBC, iv) encrypted = cipher.encrypt(pad(text, 16))
cipher = AES.new(key, AES.MODE_CBC, iv)
decrypted = cipher.decrypt(encrypted).rstrip(b' ')
print("IV:", iv) print("Encrypted:", encrypted)
print("Decrypted:", decrypted.decode())


Week 6: RC4
def rc4(key: str, data: bytes) -> bytes: # KSA
S = list(range(256)) j = 0
for i in range(256):
j = (j + S[i] + ord(key[i % len(key)])) % 256 S[i], S[j] = S[j], S[i]
# PRGA
i = j = 0 out = []
for byte in data:
i = (i + 1) % 256
j = (j + S[i]) % 256 S[i], S[j] = S[j], S[i]
out.append(byte ^ S[(S[i] + S[j]) % 256]) return bytes(out)
if  name  == " main ":
key = input("Enter key: ")
text = input("Enter text: ").encode()
encrypted = rc4(key, text) decrypted = rc4(key, encrypted)
print("Encrypted:", encrypted) print("Decrypted:", decrypted.decode())


Week 7: RSA
import math
if  name  == " main ":
p = int(input("Enter prime p: "))
q = int(input("Enter prime q: "))
n = p * q
phi = (p - 1) * (q - 1)
 
e = 65537 if math.gcd(65537, phi) == 1 else 3 d = pow(e, -1, phi)
print("Public Key:", (e, n))
print("Private Key:", (d, n))
msg = int(input(f"Enter message (< {n}): ")) if not (0 <= msg < n):
raise ValueError("Message must be less than n")
enc = pow(msg, e, n) dec = pow(enc, d, n)
print("Encrypted:", enc) print("Decrypted:", dec)


Week 8: Diffie-Hellman
if  name  == " main ":
p = int(input("Enter prime p: "))
g = int(input("Enter primitive root g: "))
a = int(input("Enter Alice's private key: "))
b = int(input("Enter Bob's private key: "))
A = pow(g, a, p) # Alice's public key
B = pow(g, b, p) # Bob's public key
k_alice = pow(B, a, p) # Alice's shared secret k_bob	= pow(A, b, p) # Bob's shared secret
print("Alice's Public Key:", A) print("Bob's Public Key:", B) print("Shared Secret (Alice):", k_alice) print("Shared Secret (Bob):", k_bob)
if k_alice == k_bob:
print("Success! Shared secret matches.") else:
print("Error! Shared secrets differ.")




Week 10— Digital signature

package week10;
import java.io.*;
import java.security.*;

public class GenerateDigitalSignature {
    public static void main(String[] args) {
        try {
            // File to sign
            String inputFile = "C:\\Users\\Admin\\OneDrive\\Desktop\\1298\\anam.txt";

            // 1️⃣ Create Key Pair (Private & Public)
            KeyPairGenerator keyGen = KeyPairGenerator.getInstance("DSA");
            keyGen.initialize(1024);
            KeyPair pair = keyGen.generateKeyPair();
            PrivateKey privateKey = pair.getPrivate();
            PublicKey publicKey = pair.getPublic();

            // 2️⃣ Initialize Signature object
            Signature sign = Signature.getInstance("SHA1withDSA");
            sign.initSign(privateKey);

            // 3️⃣ Read the input file and update signature
            FileInputStream fis = new FileInputStream(inputFile);
            byte[] buffer = new byte[1024];
            int len;
            while ((len = fis.read(buffer)) != -1) {
                sign.update(buffer, 0, len);
            }
            fis.close();

            // 4️⃣ Generate the signature
            byte[] digitalSignature = sign.sign();

            // 5️⃣ Save the signature and public key to files
            FileOutputStream sigOut = new FileOutputStream("C:\\Users\\Admin\\OneDrive\\Desktop\\1298\\signature.txt");
            sigOut.write(digitalSignature);
            sigOut.close();

            FileOutputStream keyOut = new FileOutputStream("C:\\Users\\Admin\\OneDrive\\Desktop\\1298\\publickey.txt");
            keyOut.write(publicKey.getEncoded());
            keyOut.close();

            // 6️⃣ Done
            System.out.println("✅ Digital signature created successfully!");
            System.out.println("Signature file: C:\\Users\\Admin\\OneDrive\\Desktop\\1298\\signature.txt");
            System.out.println("Public key file: C:\\Users\\Admin\\OneDrive\\Desktop\\1298\\publickey.txt");

        } catch (Exception e) {
            System.err.println("❌ Error: " + e.getMessage());
        }
    }
}




Week 9—  SHA


import hashlib

# Ask user for input
my_text = input("Enter a message: ")

# Convert the text to bytes
my_bytes = my_text.encode('utf-8')

# Create a SHA-512 hash object
hash_object = hashlib.sha512()

# Update the hash with the message bytes
hash_object.update(my_bytes)

# Get the hexadecimal hash value
hash_hex = hash_object.hexdigest()

# Print the result
print("SHA-512 hash of", my_text, ":", hash_hex)

